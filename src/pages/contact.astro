---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Contact - ${SITE_TITLE}`} description="Get in touch with Motion Metrics for your data analytics and movement analysis needs" />
	</head>
	<body>
		<Header />
		<main>
			<div class="container">
				<header class="page-header">
					<h1>Contact</h1>
					<p class="lead">Get in touch with us for your data analytics and movement analysis needs</p>
				</header>

				<div class="contact-content">
					<div class="contact-info">
						<div class="contact-section">
							<h2>Visit Us</h2>
							<p>Motion Metrics is located in <strong>Kiel, Germany</strong>.</p>
							<p>If you are interested in working with us, please drop us a line via email.</p>
						</div>

						<div class="contact-section">
							<h2>Get In Touch</h2>
							<div class="contact-methods">
								<div class="contact-method">
									<h3>Email</h3>
									<p><a href="mailto:info@motionmetrics.de">info@motionmetrics.de</a></p>
								</div>

								<div class="contact-method">
									<h3>Services Inquiry</h3>
									<p>For inquiries about our movement analysis modules or customized offers, please contact us directly.</p>
								</div>

								<div class="contact-method">
									<h3>Research Collaboration</h3>
									<p>Interested in collaborating on research projects? We welcome partnerships with academic institutions and industry partners.</p>
								</div>
							</div>
						</div>

						<div class="contact-section">
							<h2>Our Expertise Areas</h2>
							<div class="expertise-areas">
								<div class="expertise-area">
									<h4>Clinical Movement Analysis</h4>
									<p>Diagnostic and monitoring solutions for movement disorders</p>
								</div>
								<div class="expertise-area">
									<h4>Sports Performance Analysis</h4>
									<p>Performance optimization and injury prevention for athletes</p>
								</div>
								<div class="expertise-area">
									<h4>Data Science Solutions</h4>
									<p>Advanced analytics and machine learning applications</p>
								</div>
								<div class="expertise-area">
									<h4>Bioengineering Research</h4>
									<p>Integration of biological data with cutting-edge technology</p>
								</div>
							</div>
						</div>
					</div>

					<div class="contact-form-section">
						<h2>Send us a Message</h2>
						<form class="contact-form">
							<div class="form-group">
								<label for="name">Name</label>
								<input type="text" id="name" name="name" required>
							</div>

							<div class="form-group">
								<label for="email">Email</label>
								<input type="email" id="email" name="email" required>
							</div>

							<div class="form-group">
								<label for="organization">Organization</label>
								<input type="text" id="organization" name="organization">
							</div>

							<div class="form-group">
								<label for="subject">Subject</label>
								<select id="subject" name="subject" required>
									<option value="">Select a topic</option>
									<option value="clinical">Clinical Movement Analysis</option>
									<option value="sports">Sports Performance Analysis</option>
									<option value="research">Research Collaboration</option>
									<option value="custom">Custom Solutions</option>
									<option value="other">Other</option>
								</select>
							</div>

							<div class="form-group">
								<label for="message">Message</label>
								<textarea id="message" name="message" rows="6" required></textarea>
							</div>

							<button type="submit" class="submit-btn">Send Message</button>
						</form>
					</div>
				</div>
			</div>
		</main>
		<Footer />

		<style>
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.page-header {
				text-align: center;
				padding: 3rem 0;
				border-bottom: 1px solid #eee;
				margin-bottom: 3rem;
			}

			.page-header h1 {
				font-size: 3rem;
				color: #333;
				margin-bottom: 1rem;
			}

			.lead {
				font-size: 1.25rem;
				color: #666;
				margin: 0;
			}

			.contact-content {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				margin-bottom: 3rem;
			}

			.contact-section {
				margin-bottom: 3rem;
			}

			.contact-section h2 {
				color: #667eea;
				font-size: 1.8rem;
				margin-bottom: 1rem;
			}

			.contact-methods {
				display: grid;
				gap: 1.5rem;
			}

			.contact-method {
				background: #f8f9fa;
				padding: 1.5rem;
				border-radius: 8px;
			}

			.contact-method h3 {
				color: #333;
				margin-bottom: 0.5rem;
				font-size: 1.2rem;
			}

			.contact-method a {
				color: #667eea;
				text-decoration: none;
				font-weight: 600;
			}

			.contact-method a:hover {
				text-decoration: underline;
			}

			.expertise-areas {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1rem;
			}

			.expertise-area {
				background: #f0f4ff;
				padding: 1rem;
				border-radius: 6px;
				border-left: 3px solid #667eea;
			}

			.expertise-area h4 {
				color: #667eea;
				margin-bottom: 0.5rem;
				font-size: 1rem;
			}

			.expertise-area p {
				margin: 0;
				font-size: 0.9rem;
				color: #666;
			}

			.contact-form-section h2 {
				color: #667eea;
				font-size: 1.8rem;
				margin-bottom: 2rem;
			}

			.contact-form {
				background: white;
				padding: 2rem;
				border-radius: 12px;
				box-shadow: 0 4px 20px rgba(0,0,0,0.1);
			}

			.form-group {
				margin-bottom: 1.5rem;
			}

			.form-group label {
				display: block;
				margin-bottom: 0.5rem;
				color: #333;
				font-weight: 600;
			}

			.form-group input,
			.form-group select,
			.form-group textarea {
				width: 100%;
				padding: 0.75rem;
				border: 2px solid #e9ecef;
				border-radius: 6px;
				font-size: 1rem;
				transition: border-color 0.3s ease;
			}

			.form-group input:focus,
			.form-group select:focus,
			.form-group textarea:focus {
				outline: none;
				border-color: #667eea;
			}

			.submit-btn {
				background: #667eea;
				color: white;
				padding: 1rem 2rem;
				border: none;
				border-radius: 6px;
				font-size: 1.1rem;
				font-weight: 600;
				cursor: pointer;
				transition: background-color 0.3s ease;
				width: 100%;
			}

			.submit-btn:hover {
				background: #5a6fd8;
			}

			@media (max-width: 768px) {
				.contact-content {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.page-header h1 {
					font-size: 2rem;
				}

				.container {
					padding: 0 1rem;
				}

				.expertise-areas {
					grid-template-columns: 1fr;
				}

				.contact-form {
					padding: 1.5rem;
				}
			}
		</style>

		<script>
			document.querySelector('.contact-form')?.addEventListener('submit', function(e) {
				e.preventDefault();
				
				const formData = new FormData(this);
				const data = Object.fromEntries(formData);
				
				// Create mailto link with form data
				const subject = encodeURIComponent(`Motion Metrics Inquiry: ${data.subject}`);
				const body = encodeURIComponent(`
Name: ${data.name}
Email: ${data.email}
Organization: ${data.organization || 'Not provided'}
Subject: ${data.subject}

Message:
${data.message}
				`);
				
				const mailtoLink = `mailto:info@motionmetrics.de?subject=${subject}&body=${body}`;
				window.location.href = mailtoLink;
			});
		</script>
	</body>
</html>
