---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<div class="hero-content">
					<h1>We design and analyze your next digital motion experience</h1>
					<p class="hero-description">
						Precise movement analysis for enhanced athletic performance and improved patient outcomes.
					</p>
					<a href="/contact" class="cta-button">Get started</a>
				</div>
				<div class="hero-image">
					<img src="/metrics.jpg" alt="Motion analysis visualization" />
				</div>
			</section>

			<!-- Services Section -->
			<section class="services" id="services">
				<div class="container">
					<h2>Services</h2>
					<div class="services-grid">
						<div class="service-item">
							<div class="service-number">01</div>
							<h3>Gait Analysis</h3>
							<p>Comprehensive movement assessment using cutting-edge technology to identify biomechanical inefficiencies and optimize performance.</p>
						</div>
						<div class="service-item">
							<div class="service-number">02</div>
							<h3>Sports Performance Analysis</h3>
							<p>Data-driven insights to enhance athletic performance through precise motion capture and advanced analytics.</p>
						</div>
						<div class="service-item">
							<div class="service-number">03</div>
							<h3>Clinical Assessment</h3>
							<p>Evidence-based movement analysis for rehabilitation and injury prevention in clinical settings.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Expertise Section -->
			<section class="expertise" id="expertise">
				<div class="container">
					<h2>Expertise</h2>
					<div class="expertise-list">
						<div class="expertise-item">
							<strong>Data Science & Machine Learning</strong>
						</div>
						<div class="expertise-item">
							<strong>Sports Science & Biomechanics</strong>
						</div>
						<div class="expertise-item">
							<strong>Clinical Gait Analysis</strong>
						</div>
						<div class="expertise-item">
							<strong>3D Motion Capture Technology</strong>
						</div>
						<div class="expertise-item">
							<strong>Bioengineering & Psychology</strong>
						</div>
						<div class="expertise-item">
							<strong>Full Research Support</strong>
						</div>
					</div>
				</div>
			</section>

			<!-- About Section -->
			<section class="about" id="about">
				<div class="container">
					<h2>About</h2>
					<p class="about-description">
						At Motion Metrics, our team of experts brings together extensive experience in data science, 
						sports science, bioengineering, and psychology to deliver unparalleled data analytics solutions. 
						Our founders, all holding PhDs, boast a combined publication record of over 150 peer-reviewed papers, 
						showcasing their deep expertise and innovative contributions to their respective fields.
					</p>
					
					<div class="team-section">
						<h3>Team</h3>
						<div class="team-detailed-grid">
							<div class="team-member-detailed">
								<div class="member-image">
									<img src="src/team/Hansen_clint.jpg" alt="Clint Hansen" class="team-member-image">
								</div>
								<div class="member-info">
									<h4>Clint Hansen</h4>
									<p class="member-role">CEO</p>
									<p class="member-bio">My research focuses on understanding and characterizing the biomechanics of human movement, using theoretical frameworks and experimental studies. I am mainly interested in understanding the exploited motor strategies that help to explain the movements. The use of motion analysis combined with biomechanical protocols allows developing an understanding of how motor actions are planned and executed.</p>
									
									<div class="member-details">
										<div class="detail-section">
											<h5>Experience</h5>
											<ul>
												<li><strong>Universitätskrankenhaus Schleswig-Holstein</strong> | Kiel, Germany<br>
												Operations Project Lead & Deputy Working Group Leader, Neurogeriatrics | 07/2017–Present</li>
												<li><strong>ASPETAR Hospital</strong> | Doha, Qatar<br>
												Project Leader, Ligament Research | 03/2016–06/2017</li>
												<li><strong>Nanyang Technological University</strong> | Singapore<br>
												Research Associate | 08/2015–03/2016</li>
											</ul>
										</div>
										<div class="detail-section">
											<h5>Education</h5>
											<ul>
												<li><strong>Paris-Sud University</strong> | Paris, France<br>
												PhD in Human Movement Science (Distinction) | 10/2010 - 09/2013</li>
											</ul>
										</div>
										<div class="detail-section">
											<h5>Journal Activities</h5>
											<ul>
												<li><strong>Sensors</strong> - Editor | 2018–Current</li>
												<li><strong>Gait and Posture</strong> - Editor | 2022–Current</li>
											</ul>
										</div>
									</div>
								</div>
							</div>

							<div class="team-member-detailed">
								<div class="member-image">
									<img src="src/team/Romijnders_robbin.jpg" alt="Robbin Romijnders" class="team-member-image">
								</div>
								<div class="member-info">
									<h4>Robbin Romijnders</h4>
									<p class="member-role">Algorithm Engineer</p>
									<p class="member-bio">Robbin specializes in algorithm development and signal processing for movement analysis applications. His expertise lies in developing robust algorithms for gait analysis and movement disorder assessment.</p>
									
									<div class="member-details">
										<div class="detail-section">
											<h5>Education</h5>
											<ul>
												<li><strong>University of Kiel</strong> | Kiel, Schleswig-Holstein, Germany<br>
												PhD Student (Electrical and Information Engineering), 2019–2023</li>
											</ul>
										</div>
									</div>
								</div>
							</div>

							<div class="team-member-detailed">
								<div class="member-image">
									<img src="src/team/Welzel_julius.jpg" alt="Julius Welzel" class="team-member-image">
								</div>
								<div class="member-info">
									<h4>Julius Welzel</h4>
									<p class="member-role">Data Scientist</p>
									<p class="member-bio">I am a Cognitive Neuroscientist with strong interest in movement and its disorders. My research in systematic neuroscience focuses on developing novel methods to better understand and treat movement disorders. In particular, I am interested in combining useful clinical approaches and implementing modern software tools to facilitate the understanding of neurological disorders.</p>
									</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Trusted by Section -->
			<section class="trusted">
				<div class="container">
					<h2>Trusted by leading organizations worldwide</h2>
					<div class="testimonials">
						<blockquote>
							<p>"Motion Metrics provided invaluable insights that transformed our player performance analysis. Their expertise in data science and sports science is unmatched."</p>
							<cite>
								<strong>Performance Director</strong>
								<span>Premier League Club</span>
							</cite>
						</blockquote>
						<blockquote>
							<p>"The clinical gait analysis services helped us develop better rehabilitation protocols, significantly improving our patient outcomes."</p>
							<cite>
								<strong>Clinical Director</strong>
								<span>Medical Center</span>
							</cite>
						</blockquote>
						<blockquote>
							<p>"Their bioengineering expertise and data-driven approach accelerated our research timeline and enhanced our product development."</p>
							<cite>
								<strong>Research Manager</strong>
								<span>Pharmaceutical Company</span>
							</cite>
						</blockquote>
					</div>
				</div>
			</section>

			<!-- CTA Section -->
			<section class="cta">
				<div class="container">
					<h2>Let's analyze motion together</h2>
					<p>Ready to unlock the power of precise movement analysis for your organization?</p>
					<a href="/contact" class="cta-button">Contact us</a>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			/* Reset and base styles */
			* {
				box-sizing: border-box;
			}

			/* Variables */
			:root {
				--primary-color: #667eea;
				--secondary-color: #764ba2;
				--text-dark: #1a1a1a;
				--text-light: #666;
				--background-light: #f8f9fa;
				--white: #ffffff;
				--border-radius: 12px;
				--shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
			}

			/* Smooth scrolling for anchor links */
			html {
				scroll-behavior: smooth;
				font-size: 16px;
			}

			body {
				margin: 0;
				padding: 0;
				font-family: "Atkinson", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
				line-height: 1.6;
				color: var(--text-dark);
				background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
				min-height: 100vh;
			}

			/* Main content with backdrop */
			main {
				position: relative;
				z-index: 1;
				background: rgba(255, 255, 255, 0.95);
				backdrop-filter: blur(1px);
			}

			/* General Styles */
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Hero Section */
			.hero {
				display: grid;
				grid-template-columns: 1fr 1fr;
				align-items: center;
				gap: 4rem;
				padding: 8rem 2rem;
				max-width: 1400px;
				margin: 0 auto;
				min-height: 70vh;
				background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 249, 250, 0.9) 100%);
				border-radius: 0 0 2rem 2rem;
			}

			.hero-content h1 {
				font-size: 4rem;
				font-weight: 700;
				line-height: 1.1;
				color: var(--text-dark);
				margin-bottom: 1.5rem;
			}

			.hero-description {
				font-size: 1.5rem;
				color: var(--text-light);
				line-height: 1.6;
				margin-bottom: 2.5rem;
			}

			.cta-button {
				display: inline-block;
				background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
				color: white;
				padding: 1rem 2rem;
				border-radius: var(--border-radius);
				text-decoration: none;
				font-weight: 600;
				transition: transform 0.3s ease;
			}

			.cta-button:hover {
				transform: translateY(-2px);
			}

			.hero-image img {
				width: 100%;
				height: auto;
				border-radius: var(--border-radius);
				box-shadow: var(--shadow);
			}

			/* Services Section */
			.services {
				padding: 8rem 0;
				background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.12) 100%);
			}

			.services h2 {
				font-size: 3rem;
				text-align: center;
				margin-bottom: 4rem;
				color: var(--text-dark);
			}

			.services-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 3rem;
			}

			.service-item {
				background: var(--white);
				padding: 2.5rem;
				border-radius: var(--border-radius);
				box-shadow: var(--shadow);
			}

			.service-number {
				font-size: 1.25rem;
				font-weight: 700;
				color: var(--primary-color);
				margin-bottom: 1rem;
			}

			.service-item h3 {
				font-size: 1.5rem;
				margin-bottom: 1rem;
				color: var(--text-dark);
			}

			.service-item p {
				color: var(--text-light);
				line-height: 1.6;
			}

			/* Expertise Section */
			.expertise {
				padding: 8rem 0;
				background: linear-gradient(135deg, rgba(118, 75, 162, 0.1) 0%, rgba(102, 126, 234, 0.08) 100%);
			}

			.expertise h2 {
				font-size: 3rem;
				text-align: center;
				margin-bottom: 4rem;
				color: var(--text-dark);
			}

			.expertise-list {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
				gap: 1.5rem;
			}

			.expertise-item {
				padding: 1.5rem;
				background: var(--background-light);
				border-radius: var(--border-radius);
				text-align: center;
			}

			/* About Section */
			.about {
				padding: 8rem 0;
				background: linear-gradient(135deg, rgba(102, 126, 234, 0.12) 0%, rgba(118, 75, 162, 0.08) 100%);
			}

			.about h2 {
				font-size: 3rem;
				text-align: center;
				margin-bottom: 2rem;
				color: var(--text-dark);
			}

			.about-description {
				font-size: 1.25rem;
				color: var(--text-light);
				line-height: 1.6;
				text-align: center;
				max-width: 800px;
				margin: 0 auto 2rem;
			}

			.read-more {
				display: block;
				text-align: center;
				color: var(--primary-color);
				text-decoration: none;
				font-weight: 600;
				margin-bottom: 4rem;
			}

			.team-section {
				margin-top: 3rem;
			}

			.team-section h3 {
				font-size: 2rem;
				text-align: center;
				margin-bottom: 3rem;
				color: var(--text-dark);
			}

			.team-detailed-grid {
				display: grid;
				gap: 3rem;
			}

			.team-member-detailed {
				display: grid;
				grid-template-columns: 200px 1fr;
				gap: 2rem;
				background: var(--white);
				padding: 2.5rem;
				border-radius: var(--border-radius);
				box-shadow: var(--shadow);
			}

			.member-image {
				display: flex;
				justify-content: center;
				align-items: flex-start;
			}

			.placeholder-image {
				width: 150px;
				height: 150px;
				background: var(--primary-color);
				border-radius: 50%;
				display: flex;
				align-items: center;
				justify-content: center;
				color: white;
				font-size: 2rem;
				font-weight: bold;
			}

			.member-info h4 {
				color: var(--text-dark);
				font-size: 1.8rem;
				margin-bottom: 0.5rem;
			}

			.member-bio {
				line-height: 1.6;
				margin-bottom: 1.5rem;
				color: var(--text-light);
			}

			.member-details {
				margin-top: 2rem;
			}

			.detail-section {
				margin-bottom: 2rem;
			}

			.detail-section h5 {
				color: var(--primary-color);
				margin-bottom: 1rem;
				font-size: 1.2rem;
			}

			.detail-section ul {
				list-style-type: none;
				padding-left: 0;
			}

			.detail-section li {
				margin-bottom: 1rem;
				padding: 1rem;
				background: var(--background-light);
				border-radius: 6px;
				line-height: 1.5;
				color: var(--text-light);
			}

			.detail-section li strong {
				color: var(--text-dark);
			}

			/* Trusted Section */
			.trusted {
				padding: 8rem 0;
				background: linear-gradient(135deg, rgba(118, 75, 162, 0.08) 0%, rgba(102, 126, 234, 0.1) 100%);
			}

			.trusted h2 {
				font-size: 3rem;
				text-align: center;
				margin-bottom: 4rem;
				color: var(--text-dark);
			}

			.testimonials {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
			}

			blockquote {
				background: var(--white);
				padding: 2rem;
				border-radius: var(--border-radius);
				box-shadow: var(--shadow);
				margin: 0;
			}

			blockquote p {
				font-style: italic;
				margin-bottom: 1rem;
				color: var(--text-light);
			}

			cite {
				display: block;
				font-style: normal;
			}

			cite strong {
				color: var(--text-dark);
				display: block;
			}

			cite span {
				color: var(--text-light);
				font-size: 0.9rem;
			}

			/* CTA Section */
			.cta {
				padding: 8rem 0;
				background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
				color: white;
				text-align: center;
			}

			.cta h2 {
				font-size: 3rem;
				margin-bottom: 1rem;
			}

			.cta p {
				font-size: 1.25rem;
				margin-bottom: 2rem;
				opacity: 0.9;
			}

			.cta .cta-button {
				background: white;
				color: var(--primary-color);
			}

			/* Responsive Design */
			@media (max-width: 1024px) {
				.hero-content h1 {
					font-size: 3rem;
				}

				.hero-description {
					font-size: 1.25rem;
				}

				.services h2, .expertise h2, .about h2, .trusted h2, .cta h2 {
					font-size: 2.5rem;
				}
			}

			@media (max-width: 768px) {
				.hero {
					grid-template-columns: 1fr;
					text-align: center;
					padding: 4rem 1rem;
					min-height: 60vh;
				}

				.hero-content h1 {
					font-size: 2.5rem;
				}

				.hero-description {
					font-size: 1.1rem;
				}

				.services, .expertise, .about, .trusted, .cta {
					padding: 4rem 0;
				}

				.services h2, .expertise h2, .about h2, .trusted h2, .cta h2 {
					font-size: 2rem;
				}

				.services-grid {
					grid-template-columns: 1fr;
				}

				.expertise-list {
					grid-template-columns: 1fr;
				}

				.testimonials {
					grid-template-columns: 1fr;
				}

				.team-member-detailed {
					grid-template-columns: 1fr;
					text-align: center;
				}

				.placeholder-image {
					width: 120px;
					height: 120px;
					font-size: 1.5rem;
				}

				.container {
					padding: 0 1rem;
				}
			}
		</style>

		<script>
			// Smooth scrolling for anchor links
			document.addEventListener('DOMContentLoaded', function() {
				const links = document.querySelectorAll('a[href^="#"]');
				
				for (const link of links) {
					link.addEventListener('click', function(e) {
						e.preventDefault();
						const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
						const target = document.querySelector(href || '');
						if (target) {
							target.scrollIntoView({
								behavior: 'smooth',
								block: 'start'
							});
						}
					});
				}
			});
		</script>
	</body>
</html>
